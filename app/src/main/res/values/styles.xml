<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DashboardCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="DashboardIcon">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:tint">@color/primaryGreen</item>
    </style>

    <style name="DashboardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:textColor">@color/primaryGreen</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_height">56dp</item> <!-- Added fixed height -->
        <item name="android:gravity">center_vertical</item> <!-- Added to center text vertically -->
        <item name="android:popupBackground">@android:color/white</item> <!-- Added white background for dropdown -->
    </style>

</resources>