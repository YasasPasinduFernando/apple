<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with slight green tint -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F5F9F6" /> <!-- Very light green background -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#4CAF50" /> <!-- Material Design green -->
            <!-- Gradient for inner fill -->
            <gradient
                android:angle="135"
                android:centerColor="#F5F9F6"
                android:endColor="#E8F5E9"
                android:startColor="#F1F8E9"
                android:type="linear" />
        </shape>
    </item>

    <!-- Subtle shadow effect inside -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient
                android:angle="270"
                android:centerY="0.2"
                android:endColor="#00FFFFFF"
                android:startColor="#15000000"
                android:type="linear" />
        </shape>
    </item>
</layer-list>