<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" />
                    <stroke android:width="1dp" android:color="#CCCCCC" /> <!-- Added gray stroke -->
                    <stroke android:width="1dp" android:color="@color/primaryGreen" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
            <item android:gravity="end|center_vertical" android:right="8dp">
                <rotate android:fromDegrees="0" android:toDegrees="0">
                    <bitmap android:src="@drawable/ic_dropdown_arrow"
                        android:tint="@color/primaryGreen"/>
                </rotate>
            </item>
        </layer-list>
    </item>
</selector>