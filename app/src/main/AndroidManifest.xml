<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_harvest_logo"
        android:roundIcon="@drawable/ic_harvest_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.HarvestFlow"
        tools:targetApi="31">
        <!-- Login Activity as the launcher -->
        <activity android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Admin Panel Activity -->
        <activity android:name=".AdminPanelActivity" />

        <!-- Welcome Screen for Collectors -->
        <activity android:name=".CollectorDashboardActivity" />
        <!-- Farmer Activity-->
        <activity android:name=".farmermanagement.FarmerManagementActivity" />
        <activity android:name=".farmermanagement.FarmerListActivity" />
        <!-- Rice Type Activity-->
        <activity android:name=".ricetypemanagement.RiceTypesActivity" />
        <activity android:name=".ricetypemanagement.RiceTypeListActivity" />
        <!-- Quantity Activity-->
        <activity android:name=".QuantitiesActivity" />
        <!-- Reports Activity-->
        <activity android:name=".ReportsActivity" />
        <!-- Mill Activity-->
        <activity android:name=".millmanagement.RiceMillManagementActivity" />
        <activity android:name=".millmanagement.SendToMillsActivity" />
        <activity android:name=".millmanagement.RiceMillListActivity" />
        <activity android:name=".ViewApprovedQuantitiesActivity" />

    </application>

</manifest>